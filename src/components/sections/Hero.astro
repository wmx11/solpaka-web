  <div
    class="absolute bg-pink-500 h-[400px] w-[400px] blur-[300px] top-0 left-0 z-0"
  >
  </div>
  <div
    class="absolute bg-emerald-500 h-[400px] w-[400px] blur-[300px] bottom-0 right-0 z-0"
  >
  </div>
