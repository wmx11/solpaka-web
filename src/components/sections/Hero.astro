---
import { Image } from "astro:assets";
import SolpakaImage from "../../assets/solpaka.png";
import SolpakaText from "../../assets/solpaka-text.png";
import SolpakaBg from "../../assets/bg.jpg";
import Dextools from "../../assets/dextools.png";
import Dexscreener from "../../assets/dexscreener.png";
import Button from "../../components/Button.astro";
import Clipboard from "../Clipboard.astro";
---

<section
  class="min-h-screen py-24 flex items-center justify-center relative overflow-x-clip px-2 md:px-0 overflow-hidden"
>
  <Image src={SolpakaBg} alt="bg" class="absolute inset-0 w-full" />
  <div
    class="flex md:flex-row flex-col-reverse gap-16 items-center justify-between container mx-auto relative z-10"
  >
    <div class="space-y-8 flex-1">
      <div class="text-white">
        <div class="font-bold text-4xl -rotate-6">Welcome to</div>
        <Image src={SolpakaText} alt="Solpaka" width={600} />
        <h2 class="text-3xl font-bold mb-2">
          SOLPAKA aims to become the official "Unofficial" Solana Mascot
        </h2>
        <p class="text-md italic">
          SOLPAKA does nothing. It's just chill like that.
        </p>
        <p class="text-sm italic mb-4">
          Buy SOLPAKA. Chill with SOLPAKA. Be a SOLPAKIAN. Grow fleece.
        </p>
        <div class="p-4 rounded-md border-2 border-pink-500">
          <p class="mb-2">
            LP Locked: <a
              href="https://solscan.io/tx/3C7N4aWjWHchp1nCBnYfkPBg4EYzsb4bSFyPFnYw2Ke3W9iFr8htyKV8Wzqre1iC4XD4ePFb8hopw3x3fo8ZWHwW"
              class="underline"
              target="_blank">Solscan tx</a
            >
          </p>
          <span class="flex gap-2 items-center mb-2">
            <Clipboard copy="BDHqX9YfJE3M6caox3obUX5YpWHz2cjnGFiZJtRghdCo" />
            <p class="break-all">
              Contract: <a
                href="https://solscan.io/token/BDHqX9YfJE3M6caox3obUX5YpWHz2cjnGFiZJtRghdCo"
                class="underline"
                target="_blank">BDHqX9YfJE3M6caox3obUX5YpWHz2cjnGFiZJtRghdCo</a
              >
            </p>
          </span>
          <div>
            <span class="flex gap-2 items-center mb-2">
              <Clipboard copy="CXKRjZd1G5HAn3h3YpwoMsaAFLc3GNPexEUG64W69eKf" />
              <p class="break-all">
                Donations (CEX): <a
                  href="https://solscan.io/account/CXKRjZd1G5HAn3h3YpwoMsaAFLc3GNPexEUG64W69eKf"
                  class="underline"
                  target="_blank"
                  >CXKRjZd1G5HAn3h3YpwoMsaAFLc3GNPexEUG64W69eKf</a
                >
              </p>
            </span>
            <p class="text-xs italic">
              Solpaka community memebers can donate to help raise funds for the first CEX
              listing and marketing efforts.
            </p>
          </div>
        </div>
      </div>
      <div class="flex flex-col gap-4">
        <div class="flex gap-4">
          <a
            href="https://raydium.io/swap/?inputCurrency=sol&outputCurrency=BDHqX9YfJE3M6caox3obUX5YpWHz2cjnGFiZJtRghdCo&fixed=in"
            target="_blank"
            class="flex-1 w-full"
          >
            <Button>Buy on Raydium</Button>
          </a>
          <a
            href="https://jup.ag/swap/SOL-SOLPAKA_BDHqX9YfJE3M6caox3obUX5YpWHz2cjnGFiZJtRghdCo"
            target="_blank"
            class="flex-1 w-full"
          >
            <Button>Buy on Jupiter</Button>
          </a>
        </div>
        <div>
          <a
            href="https://dexscreener.com/solana/6mprd9lm5yycftwlcxlnb5zrm5vnup3ffv3vqtvajaza"
            target="_blank"
            class="flex-1 w-full"
          >
            <Button
              className="bg-purple-500 flex gap-2 items-center justify-center mb-4"
              ><Image src={Dexscreener} alt="dextools logo" width="25" />
              <span>Dexscreener</span>
            </Button>
          </a>
          <a
            href="https://www.dextools.io/app/en/solana/pair-explorer/6mPrd9LM5yycFTwLcXLNB5zrm5VNUp3fFv3vQtvaJAzA?t=1710530811725"
            target="_blank"
            class="flex-1 w-full"
          >
            <Button
              className="bg-purple-500 flex gap-2 items-center justify-center"
            >
              <Image src={Dextools} alt="dextools logo" width="25" />
              <span>Dextools</span>
            </Button>
          </a>
        </div>
      </div>
